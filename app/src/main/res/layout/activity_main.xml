<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    android:paddingStart="20pt"
    android:paddingLeft="20pt"
    android:paddingTop="20pt"
    android:paddingEnd="20pt"
    android:paddingRight="20pt"
    android:paddingBottom="20pt"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ans_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="30pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ac_button"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="AC" />

            <Button
                android:id="@+id/addsub_button"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="+/-" />

            <Button
                android:id="@+id/mod_button"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="%" />

            <Button
                android:id="@+id/div_button"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonOrange"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="9" />

            <Button
                android:id="@+id/mul_button"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonOrange"
                android:text="X" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="6" />

            <Button
                android:id="@+id/sub_button"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonOrange"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonlight"
                android:text="3" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@color/buttonOrange"
                android:text="+" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buttonlight"
            android:text="0" />

        <Button
            android:id="@+id/dot_button"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buttonlight"
            android:text="." />

        <Button
            android:id="@+id/equal_button"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buttonOrange"
            android:text="=" />
    </LinearLayout>
</LinearLayout>